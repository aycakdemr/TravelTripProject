@model EntityLayer.Concrete.Comment
@{
    ViewBag.Title = "GetComment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>

@using (Html.BeginForm("UpdateComment", "Comment", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.UserName)
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Email)
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Comments)
    @Html.TextAreaFor(x => x.Comments, 15, 1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogId)
    @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control", @readonly = "readonly" })
    <br />

    <button class="btn btn-primary">Yorum Güncelle</button>
}